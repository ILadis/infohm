<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<de.ladis.infohm.android.widget.SlidingTabLayout
		android:id="@+id/fragment_events_pager_tabs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary" />

	<android.support.v4.view.ViewPager
		android:id="@+id/fragment_events_pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/fragment_events_pager_tabs" />

	<ImageButton
		style="?attr/buttonFloatStyle"
		android:id="@+id/fragment_events_pager_action"
		android:layout_marginTop="4dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="20dp"
		android:layout_alignParentRight="true"
		android:src="@drawable/events_star_publisher" />

</RelativeLayout>