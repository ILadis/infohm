<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		android:id="@id/activity_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="?attr/statusBarSize" />

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="?attr/cardViewGuttersPadding"
		custom:cardBackgroundColor="?attr/colorPrimaryDark"
		custom:cardCornerRadius="4dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="?attr/cardViewContentPadding">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/welcome_favorite"
				android:scaleType="centerInside"
				android:contentDescription="@string/activity_welcome_headline" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:singleLine="true"
				android:ellipsize="end"
				android:text="@string/activity_welcome_headline"
				android:textAppearance="?attr/textAppearanceTitle"
				android:textColor="@android:color/white" />
	
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:text="@string/activity_welcome_instructions"
				android:textAppearance="?attr/textAppearanceBody"
				android:textColor="@android:color/white" />
	
		</LinearLayout>
	
	</android.support.v7.widget.CardView>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<Button
		style="?attr/buttonFlatStyle"
		android:id="@+id/activity_welcome_submit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:text="@string/activity_welcome_submit" />

	<fragment class="de.ladis.infohm.android.fragment.publisher.StarPublisherFragment"
		android:id="@+id/activity_welcome_star_fragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/activity_welcome_submit"
		tools:layout="@layout/fragment_star_publisher" />

	<View
		style="?attr/dividerStyle"
		android:layout_above="@id/activity_welcome_submit" />

	</RelativeLayout>

</LinearLayout>