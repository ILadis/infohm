<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="?attr/cardViewGuttersPadding"
	custom:cardCornerRadius="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="?attr/cardViewContentPadding">

		<TextView
			android:id="@+id/adapter_meals_index"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:paddingRight="10dp"
			android:paddingLeft="10dp"
			android:singleLine="true"
			android:ellipsize="end"
			android:textAppearance="?attr/textAppearanceHeadline" />

		<TextView
			android:id="@+id/adapter_meals_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingRight="10dp"
			android:paddingLeft="10dp"
			android:paddingBottom="2dp"
			android:textAppearance="?attr/textAppearanceBody" />

		<TextView
			android:id="@+id/adapter_meals_prices"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingRight="10dp"
			android:paddingLeft="10dp"
			android:paddingBottom="10dp"
			android:textAppearance="?attr/textAppearanceCaption" />

	</LinearLayout>

</android.support.v7.widget.CardView>