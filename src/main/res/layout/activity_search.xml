<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.v7.widget.Toolbar
		android:id="@id/activity_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="?attr/statusBarSize" />

	<fragment class="de.ladis.infohm.android.fragment.search.SearchMenuFragment"
		android:id="@+id/activity_search_fragment_search"
		android:layout_width="0dp"
		android:layout_height="0dp" />

	<fragment class="de.ladis.infohm.android.fragment.search.SearchFragment"
		android:id="@+id/activity_search_fragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

</LinearLayout>