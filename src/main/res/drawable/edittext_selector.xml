<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
	android:insetTop="@dimen/abc_control_inset_material"
	android:insetRight="@dimen/abc_control_inset_material"
	android:insetBottom="@dimen/abc_control_inset_material"
	android:insetLeft="@dimen/abc_control_inset_material">

	<selector>

		<item android:drawable="@drawable/edittext_error"
			android:state_enabled="true" android:state_activated="true" />

		<item android:drawable="@drawable/edittext_activated"
			android:state_enabled="true" android:state_focused="true" />

		<item android:state_enabled="true"
			android:drawable="@drawable/edittext_default" />

		<item android:drawable="@drawable/edittext_disabled" />

	</selector>

</inset>
