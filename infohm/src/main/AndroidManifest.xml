<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.ladis.infohm"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-permission android:name="android.permission.INTERNET" />

	<uses-sdk
		android:minSdkVersion="9"
		android:targetSdkVersion="21" />

	<application
		android:name=".android.Application"
		android:allowBackup="true"
		android:icon="@drawable/launcher_main"
		android:label="@string/app_name"
		android:theme="@style/Theme">

		<activity
			android:name="de.ladis.infohm.android.activity.authentication.AuthenticationActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			<meta-data
				android:name="android.app.default_searchable"
				android:value="de.ladis.infohm.android.activity.search.SearchActivity" />
		</activity>

		<activity
			android:name="de.ladis.infohm.android.activity.welcome.WelcomeActivity"
			android:label="@string/app_name" />

		<activity
			android:name="de.ladis.infohm.android.activity.events.EventsActivity"
			android:label="@string/app_name" />

		<provider
			android:name="de.ladis.infohm.android.content.sqlite.SqliteContentProvider"
			android:authorities="de.ladis.infohm.provider"
			android:exported="false" />

	</application>

</manifest>